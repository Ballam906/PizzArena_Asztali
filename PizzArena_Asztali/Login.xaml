<Window x:Class="PizzArena_Asztali.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzArena_Asztali"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <TextBlock Text="Admin Panel" 
                           FontSize="28" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 30"/>

            <TextBlock Text="Felhasználónév" FontSize="14" Margin="0 0 0 5"/>
            
            <TextBox x:Name="felhasznalonevBox"
                         Height="35"
                         Background="#EFEFEF"
                         BorderThickness="1"
                         Margin="0 0 0 15"/>

            <TextBlock Text="Jelszó" FontSize="14" Margin="0 0 0 5"/>
            <PasswordBox x:Name="jelszoBox"
                             Height="35"
                             Background="#EFEFEF"
                             BorderThickness="1"
                             Margin="0 0 0 25"/>

            <Button Content="Bejelentkezés"
                        Height="40"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        Cursor="Hand"/>

            

        </StackPanel>
    </Grid>
</Window>
